html(lang='en')
  head
    title=title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    script(defer='', src='https://use.fontawesome.com/releases/v5.0.8/js/all.js')
  body
    .container
      //form(method='POST', action='/reset')
        legend Forgot Password
        .form-group
          label(for='user_email') Email
          input.form-control(type='text', name='user_email', autofocus)
        button.btn.btn-primary(type='submit') Reset Password

      form.form-horizontal(role='form', method='POST', )
        .row
          .col-md-3
          .col-md-6
            h2 Forgot password
            hr
        .row
          .col-md-3
          .col-md-6
            .form-group.has-danger
              label.sr-only(for='user_email') Username
              .input-group.mb-2.mr-sm-2.mb-sm-0
                .input-group-addon(style='width: 2.6rem')
                  i.fas.fa-at
                input#user_email.form-control(type='email', name='user_email', required='', autofocus='')
        .row
          .col-md-3
          .col-md-6
            .form-control-feedback
              span.text-danger.align-middle
                - if (info){
                    p #{info} 
                - }  
              span.text-danger.align-middle
                - if (error){
                    p #{error} 
                - }  
        .row(style='padding-top: 1rem')
          .col-md-3
          .col-md-9
            button.btn.btn-success(type='Reset Password')
              i.fa.fa-sign-in
              |  Reset Password
