html(lang='en')
  head
    title=title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    script(defer='', src='https://use.fontawesome.com/releases/v5.0.8/js/all.js')
  body
    .container
      form.form-horizontal(role='form', method='POST', action='/twofa/')
        .row
          .col-md-3
          .col-md-6
            h2 Verification Page
            hr
        .row
          .col-md-3
          .col-md-6
            .form-group.has-danger
              label.sr-only(for='username') Username
              .input-group.mb-2.mr-sm-2.mb-sm-0
                .input-group-addon(style='width: 2.6rem')
                  i.fas.fa-user
                input#username.form-control(type='text', name='username', required='', value=username, readonly)
          .col-md-3
            .form-control-feedback
              span.text-danger.align-middle
                - if (error){
                    p #{error} 
                - }  
        .row
          .col-md-3
          .col-md-6
            .form-group
              label.sr-only(for='token') Code Token
              .input-group.mb-2.mr-sm-2.mb-sm-0
                .input-group-addon(style='width: 2.6rem')
                  i.fa.fa-lock
                input#token.form-control(type='text', name='token', placeholder='token', required='', autofocus='')
          .col-md-3
            .form-control-feedback
              span.text-danger.align-middle
                // Put password error message here
        .row
          .col-md-3
          .col-md-6(style='padding-top: .35rem')
            .form-check.mb-2.mr-sm-2.mb-sm-0
              label.form-check-label
                input.form-check-input(name='remember', type='checkbox')
                span(style='padding-bottom: .15rem') Remember me
        .row(style='padding-top: 1rem')
          .col-md-3
          .col-md-6
            button.btn.btn-success(type='submit')
              i.fa.fa-sign-in
              |  Verify
            a.btn.btn-link(href='/login') Back to Login
        .row
          .col-md-3
          .col-md-6
            p Don't have an account? 
              a.btn.btn-link(href='/signup') Register here.
            
        