html(lang='en')
  head
    title=title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    script(defer='', src='https://use.fontawesome.com/releases/v5.0.8/js/all.js')
  body
    .container
      form.form-horizontal(role='form', method='POST', action='/signup')
        .row
          .col-md-3
          .col-md-6
            h2 Sign Up
            hr
        .row
          .col-md-3
          .col-md-6
        .row
          .col-md-3
          .col-md-6
            form.card-body(action='/signup', method='POST')
              .form-group.row
                input#name(type='hidden', name='userID')
                label.col-sm-4 Username: 
                input#username.form-control.col-sm-8(type='text', name='username', value='', required='true', autofocus='')
              .form-group.row
                label.col-sm-4 Email: 
                input#user_email.form-control.col-sm-8(type='email', name='user_email', value='', required='true')
              .form-group.row
                label.col-sm-4 Password: 
                input#password.form-control.col-sm-8(type='text', name='password', required='true', value='')
              .form-group.row
                label.col-sm-4 Confirm Password: 
                input#conpassword.form-control.col-sm-8(type='password', name='conpassword', value='', required='true')
                span.col-sm-12.text-danger.align-middle
                  - if (notmatch){
                      p #{notmatch} 
                  - }               
              .form-group.row
                button.btn.btn-info.col.pagb(type='submit') Sign Up
              .form-group-row
                span.text-danger.align-middle
                  - if (info){
                      p #{info} 
                  - }  
                span.text-danger.align-middle
                  - if (error){
                      p #{error} 
                  - }  
                    
                